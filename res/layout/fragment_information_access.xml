<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="10dp">
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="340dp"
				android:id="@+id/map"/>
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignBottom="@id/map"
				android:layout_margin="5dp"
				android:padding="10dp"
				android:background="@color/light_background">
				<TextView
					android:id="@+id/txtvOffice"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="OUR OFFICE"
					style="@style/information_header"/>
				<TextView
					android:id="@+id/txtvAddress"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="state, district"
					style="@style/information_basic_text"
					android:layout_weight="1"/>
			</LinearLayout>
		</RelativeLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="10dp"
			android:orientation="horizontal">
			<ImageView
				android:layout_width="@dimen/information_image_size"
				android:layout_height="@dimen/information_image_size"
				android:layout_marginRight="@dimen/information_image_margin"
				android:src="@drawable/ic_information_access_bus"/>
			<ScrollView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				>
				<GridLayout
					android:id="@+id/grid_buses"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:columnCount="6"/>
			</ScrollView>
		</LinearLayout>
		<View
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:background="#ff9e9e9e"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="10dp"
			android:orientation="horizontal">
			<ImageView
				android:layout_width="@dimen/information_image_size"
				android:layout_height="@dimen/information_image_size"
				android:layout_marginRight="@dimen/information_image_margin"
				android:src="@drawable/ic_information_access_tram"/>
			<ScrollView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				>
				<GridLayout
					android:id="@+id/grid_trams"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:columnCount="6"/>
			</ScrollView>
		</LinearLayout>
		<View
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:background="#ff9e9e9e"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="10dp"
			android:orientation="horizontal">
			<ImageView
				android:layout_width="@dimen/information_image_size"
				android:layout_height="@dimen/information_image_size"
				android:layout_marginRight="@dimen/information_image_margin"
				android:src="@drawable/ic_information_access_parking"/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/txtv_parking"
				android:text="Parkingi"
				style="@style/information_basic_text"/>
		</LinearLayout>
	</LinearLayout>
</ScrollView>